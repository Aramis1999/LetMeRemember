<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/let"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.RecordatorioFragment">

    <TextView
        android:id="@+id/tituloPantallaInicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recordatorios:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subtituloPantalla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presiona sobre un recordatorio para ver su contenido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloPantallaInicial" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtituloPantalla" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_RecordatorioList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView"
        tools:listitem="@layout/itemlist_recordatorio"
        tools:layout_editor_absoluteX="-28dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
